<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="loginTitle">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="loginEditText">
        <item name="android:padding">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/background_campo_edit_text</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="primaryButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/primary_button_background</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tituloPagina">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="textoComunidadeContainer">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:color">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>