<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CriarConta">

    <TextView
        android:id="@+id/CadastrarUsuario_TextoPrincipal_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/tituloPagina"
        android:text="Preencha as informações para poder acessar plataforma"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="12dp"/>

    <TextView
        android:id="@+id/CadastrarUsuario_TextoNome_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CadastrarUsuario_TextoPrincipal_TextView"
        android:text="Nome"
        style="@style/loginTitle"
        android:layout_marginHorizontal="12dp"/>

    <EditText
        android:id="@+id/CadastrarUsuario_CampoNome_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CadastrarUsuario_TextoNome_TextView"
        style="@style/loginEditText"
        android:hint="Seu nome completo"/>


    <TextView
        android:id="@+id/CadastrarUsuario_TextoEmail_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CadastrarUsuario_CampoNome_EditText"
        android:text="Email"
        style="@style/loginTitle"
        android:layout_marginHorizontal="12dp"/>


    <EditText
        android:id="@+id/CadastrarUsuario_CampoEmail_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CadastrarUsuario_TextoEmail_TextView"
        style="@style/loginEditText"
        android:hint="exemplo@email.com"/>



    <TextView
        android:id="@+id/CadastrarUsuario_TextoSenha_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CadastrarUsuario_CampoEmail_EditText"
        android:text="Senha"
        style="@style/loginTitle"
        android:layout_marginHorizontal="12dp"/>


    <EditText
        android:id="@+id/CadastrarUsuario_CampoSenha_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CadastrarUsuario_TextoSenha_TextView"
        style="@style/loginEditText"
        android:hint="Pelo menos 8 dígitos"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/CadastrarUsuario_BotaoCadastrarUsuario_Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CadastrarUsuario_CampoSenha_EditText"
        app:layout_constraintVertical_bias="0.896"
        android:layout_marginHorizontal="12dp"
        style="@style/primaryButton"
        android:text="Criar Conta" />


</androidx.constraintlayout.widget.ConstraintLayout>